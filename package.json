    "start": "electron .",
    "build-debug-apk": "gradlew assembleDebug",
    "build-release-apk": "gradlew assembleRelease",
    "pack-win": "electron-packager . animetv --overwrite --platform=win32  --arch=x64       --prune=true --out=electron/builds --asar --ignore=.gradle --ignore=.git --ignore=.idea --ignore=gradle --ignore=keystore --ignore=tools --ignore=.gitignore --ignore=.gitattributes --ignore=adbwsl.bat --ignore=CHANGELOGS.md --ignore=gradle* --ignore=local* --ignore=server* --ignore=settings* --ignore=README* --ignore=app/build --ignore=app/libs --ignore=app/src/main/java --ignore=app/src/main/res --ignore=app/src/main/AndroidManifest.xml --ignore=app/src/main/ic_launcher-playstore.png",
    "pack-linux": "electron-packager . animetv --overwrite --platform=linux  --arch=x64       --prune=true --out=electron/builds --asar --ignore=.gradle --ignore=.git --ignore=.idea --ignore=gradle --ignore=keystore --ignore=tools --ignore=.gitignore --ignore=.gitattributes --ignore=adbwsl.bat --ignore=CHANGELOGS.md --ignore=gradle* --ignore=local* --ignore=server* --ignore=settings* --ignore=README* --ignore=app/build --ignore=app/libs --ignore=app/src/main/java --ignore=app/src/main/res --ignore=app/src/main/AndroidManifest.xml --ignore=app/src/main/ic_launcher-playstore.png",
    "pack-linux-arm64": "electron-packager . animetv --overwrite --platform=linux  --arch=arm64     --prune=true --out=electron/builds --asar --ignore=.gradle --ignore=.git --ignore=.idea --ignore=gradle --ignore=keystore --ignore=tools --ignore=.gitignore --ignore=.gitattributes --ignore=adbwsl.bat --ignore=CHANGELOGS.md --ignore=gradle* --ignore=local* --ignore=server* --ignore=settings* --ignore=README* --ignore=app/build --ignore=app/libs --ignore=app/src/main/java --ignore=app/src/main/res --ignore=app/src/main/AndroidManifest.xml --ignore=app/src/main/ic_launcher-playstore.png",
    "pack-mac": "electron-packager . animetv --overwrite --platform=darwin --arch=arm64     --prune=true --out=electron/builds --asar --ignore=.gradle --ignore=.git --ignore=.idea --ignore=gradle --ignore=keystore --ignore=tools --ignore=.gitignore --ignore=.gitattributes --ignore=adbwsl.bat --ignore=CHANGELOGS.md --ignore=gradle* --ignore=local* --ignore=server* --ignore=settings* --ignore=README* --ignore=app/build --ignore=app/libs --ignore=app/src/main/java --ignore=app/src/main/res --ignore=app/src/main/AndroidManifest.xml --ignore=app/src/main/ic_launcher-playstore.png;cd ./electron/builds/animetv-darwin-arm64/;electron-installer-dmg animetv.app animetv-mac-arm64;cd ../../../",
    "pack-mac-x64": "electron-packager . animetv --overwrite --platform=darwin --arch=x64       --prune=true --out=electron/builds --asar --ignore=.gradle --ignore=.git --ignore=.idea --ignore=gradle --ignore=keystore --ignore=tools --ignore=.gitignore --ignore=.gitattributes --ignore=adbwsl.bat --ignore=CHANGELOGS.md --ignore=gradle* --ignore=local* --ignore=server* --ignore=settings* --ignore=README* --ignore=app/build --ignore=app/libs --ignore=app/src/main/java --ignore=app/src/main/res --ignore=app/src/main/AndroidManifest.xml --ignore=app/src/main/ic_launcher-playstore.png;cd ./electron/builds/animetv-darwin-x64/;electron-installer-dmg animetv.app animetv-mac-x64;cd ../../../"
  },
